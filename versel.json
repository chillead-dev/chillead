{
  "cleanUrls": true,
  "trailingSlash": false,

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "no-referrer"
        }
      ]
    }
  ],

  "routes": [
    {
      "src": "^/api/.*",
      "dest": "/api/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": ".*",
      "status": 404,
      "dest": "/404.html"
    }
  ]
}
